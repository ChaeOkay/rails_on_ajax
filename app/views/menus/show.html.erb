<h3><%= @menu.name %></h3>
<ul>
  <% @menu.menu_items.each do |item| %>
    <%= render 'menu_item', :item => item %>
  <% end %>
</ul>
<%= form_for [@menu, @menu_item], :remote => true, :html => {:class => 'new-item'} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit %>
<% end %>
